{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSources": true,
		"strict": true,
    "downlevelIteration": true,
    "suppressImplicitAnyIndexErrors": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build",
    "project": "."
  },
  "includes": [
    "src/**/*",
		"src/**/*.proto"
  ],
	"exclude": [
		"build" 
	]
}
