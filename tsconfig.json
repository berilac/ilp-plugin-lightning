{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSources": true,
    "strict": true,
    "downlevelIteration": true,
    "suppressImplicitAnyIndexErrors": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build",
    "strictPropertyInitialization": false,
    "project": "."
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts",
  ]
}